<!-- Group 2 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vector2">


    <TextView
        android:id="@+id/signText2"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="258dp"
        android:layout_marginTop="46dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="-3sp"
        android:text="@string/sign_in_text"
        android:textAppearance="@style/sign_in_text" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="185dp"
        android:layout_height="57dp"
        android:layout_below="@+id/signText2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="52dp"
        android:hint="@string/app_name"
        android:textAlignment="center"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/givenName"
        android:layout_width="184dp"
        android:layout_height="56dp"
        android:layout_below="@+id/lastName"
        android:hint="@string/app_name"
        android:textAlignment="center"
        android:textSize="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="54dp" />

    <EditText
        android:id="@+id/user_textView2"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/givenName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="54dp"
        android:hint="@string/app_name"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/pass_textView2"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="173dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="54dp"
        android:hint="@string/app_name"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="24dp" />

    <ImageButton
        android:id="@+id/register_button"
        android:layout_width="230dp"
        android:layout_height="86dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="499dp"
        android:background="@drawable/register_button_img"
        android:textSize="36dp" />

</RelativeLayout>




